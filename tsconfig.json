{
    "compilerOptions": {
        "module": "ES6",
        "moduleResolution": "Node",
        "target": "ES6",
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}